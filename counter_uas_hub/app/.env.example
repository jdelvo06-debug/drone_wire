# DroneWire Environment Variables
# Copy this file to .env and fill in the values

# Database (Supabase PostgreSQL)
# Use Transaction pooler URL for serverless (Vercel) compatibility
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-us-west-2.pooler.supabase.com:6543/postgres?pgbouncer=true"

# AI Processing API Key (RouteLLM/AbacusAI)
ROUTELLM_API_KEY=""

# Cron Job Authentication
# IMPORTANT: Change this to a secure random string in production
CRON_SECRET="your-secure-random-string-here"

# SAM.gov API Key (for contract data)
# Get from: https://sam.gov (Account Details page)
SAM_GOV_API_KEY=""

# Email (Resend)
# Get from: https://resend.com
RESEND_API_KEY=""
FROM_EMAIL="DroneWire <noreply@yourdomain.com>"
ADMIN_EMAIL="admin@yourdomain.com"

# Site URL (for email links)
SITE_URL="https://dronewire.com"

# Logging Level (debug, info, warn, error, silent)
# Default: 'info' in production, 'debug' in development
LOG_LEVEL="info"
